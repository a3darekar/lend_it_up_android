<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/searchProduct"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shadow"
            android:elevation="6dp"
            android:hint="Search product"
            android:paddingLeft="15dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_alignBottom="@+id/searchProduct"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="-4dp"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon"
            />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_margin="16dp"
        android:elevation="6dp">

        <EditText
            android:id="@+id/etProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"

                />

            <TextView
                android:id="@+id/postTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="16dp"
                android:text="This is our title of the post"/>

            <TextView
                android:id="@+id/postDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="This is our title of the post.We like this description. This makes us happy. This is our title of the post. We like this description. This makes us happy."/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="0dp"
        android:text="Tap to upload"
        android:textColor="@android:color/background_light"/>
</LinearLayout>
